- content_for :title do
  = I18n.t(:"meta.title.sign_up")
- plan = params[:plan] || 'free'
.row
  .col-xs-12
    .col-md-3
    .col-xs-12.col-md-6
      .well
        %h1=I18n.t(:"headlines.sign_up")

        = form_for @user, url: user_registration_path, html: {class: "form-horizontal"} do |form|
          = form.hidden_field :plan, value: plan
          .form-group{class: form_error?(@user, :email)}
            .col-sm-12
              = form.text_field :email, autocomplete: "off", placeholder: I18n.t(:"helpers.placeholder.user.email"), class: 'form-control'
              = form_errors @user, :email

          %hr

          .form-group{class: form_error?(@user, :password)}
            .col-sm-12
              = form.password_field :password, autocomplete: "off", placeholder: I18n.t(:"helpers.placeholder.user.password"), class: 'form-control'
              = form_errors @user, :password

          .form-group{class: form_error?(@user, :password_confirmation)}
            .col-sm-12
              = form.password_field :password_confirmation, autocomplete: "off", placeholder: I18n.t(:"helpers.placeholder.user.password_confirmation"), class: 'form-control'
              = form_errors @user, :password_confirmation

          .text-right
            %button.hidden-xs.btn.btn-primary.btn-lg.btn-loading{data: {loading: {text: I18n.t(:"actions.loading")}}}
              = I18n.t(:"actions.sign_up")
            %button.visible-xs.btn-block.btn.btn-primary.btn-lg.btn-loading{data: {loading: {text: I18n.t(:"actions.loading")}}}
              = I18n.t(:"actions.sign_up")
          .clearfix
    .col-xs-12.col-md-3
      = render 'base/pricing_table', active: plan, type: 'free', hide_ctab: true
      = render 'base/pricing_table', active: plan, type: 'basic', hide_ctab: true
      = render 'base/pricing_table', active: plan, type: 'premium', hide_ctab: true