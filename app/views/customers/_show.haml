%tr
  %td=customer.fullname
  %td=simple_format(customer.address.address)
  %td=customer.contact
  %td
    .btn-group
      = link_to edit_customer_path(customer), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.glyphicon.glyphicon-edit
      = confirm_link_to customer_path(customer), data: {notyConfirm: I18n.t(:"messages.customer.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger btn-sm" do
        %i.glyphicon.glyphicon-trash
