.table-responsive
  %table.table.table-condensed.table-hover.table-bordered.table-striped
    %thead
      %tr
        %th=sortable "name", I18n.t(:"table.labels.defaults.name")
        %th=sortable "rate", I18n.t(:"table.labels.defaults.rate")
        %th=sortable "customers.company", I18n.t(:"table.labels.defaults.customer")
        %th.actions.two=I18n.t(:"table.labels.defaults.actions")

    %tbody
      = render partial: "projects/show", collection: @projects, as: :project

      - if @projects.blank?
        = render "layouts/tables/blank", count: 4, resource: "project"
