%tr
  %td
    = project.name
  %td
    = project.rate
  %td
    = project.customer.fullname
  %td
    .btn-group
      = link_to edit_project_path(project), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.glyphicon.glyphicon-edit
      = confirm_link_to project_path(project), title: I18n.t(:"actions.delete"), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, method: :delete, class: "btn btn-danger btn-sm" do
        %i.glyphicon.glyphicon-trash
