%nav#main-nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '.navbar-ex1-collapse'}}
        %span.sr-only
          = I18n.t(:"nav.header.toggle")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path, class: get_active_nav}
        = I18n.t(:"title.default")

    .collapse.navbar-collapse.navbar-ex1-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav
          %li{class: get_active_nav('invoices')}
            = link_to I18n.t(:"nav.header.home"), invoices_path
          %li{class: get_active_nav('customers')}
            = link_to I18n.t(:"nav.header.customers"), customers_path
          %li{class: get_active_nav('projects')}
            = link_to I18n.t(:"nav.header.projects"), projects_path
      = render "layouts/user_nav"
